<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".disctict">
    <include layout="@layout/toolbar_layout" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="209dp"
        android:layout_marginTop="10dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutdoc"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="#021347"
            android:src="@drawable/img_1"></ImageView>
    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Doctors"
        android:textColor="@color/white"
        android:background="#021347"
        android:id="@+id/btndoctor"
        ></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutveg"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:src="@drawable/img_2"></ImageView>

        <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Vegetable Shops"
        android:background="@color/white"
        android:id="@+id/btnvegetable"
       ></Button>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutstore"
        android:background="#0E0B01"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/img_3">
        </ImageView>
    <Button
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="General Store"
        android:textColor="@color/white"
        android:background="#0E0B01"
        android:id="@+id/btngeneral"
        ></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/layoutmedical"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/img_4">
        </ImageView>

        <Button
            android:id="@+id/btnmedical"
            android:layout_width="150dp"
            android:background="@color/white"
            android:layout_height="100dp"
            android:text="Medical Store"></Button>
    </LinearLayout>
    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Others"
        android:background="@color/black"
        android:textColor="@color/white"
        android:id="@+id/btnother"
        android:layout_marginTop="20dp"></Button>

</LinearLayout>